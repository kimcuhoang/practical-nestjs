{
  "name": "@kch/domain-n-typeorm",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:typeorm:ext": "ts-node --project tsconfig.json ./node_modules/.bin/typeorm-extension -d test/sample-app/test.datasource.ts",
    "test:db:create": "yarn test:typeorm:ext db:create --synchronize no",
    "test:db:drop": "yarn test:typeorm:ext db:drop",
    "test:db:reset": "yarn test:db:drop && yarn test:db:create",
    "test:typeorm": "typeorm-ts-node-commonjs -d test/sample-app/test.datasource.ts",
    "test:gen:migration": "rm -rf ./test/sample-app/persistence/migrations/*.ts && yarn build && yarn test:typeorm migration:generate",
    "test:pre": "yarn test:db:reset && yarn test:gen:migration ./test/sample-app/persistence/migrations/init && yarn test:db:drop",
    "test": "jest --runInBand --config ./test/jest.config.ts",
    "test:e2e": "yarn test"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ulidx": "^2.4.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/testing": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@testcontainers/postgresql": "^10.16.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "pg": "^8.11.5",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "testcontainers": "^10.17.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.7.0",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-transactional": "^0.5.0",
    "typescript": "^5.1.3"
  }
}
